<UserControl x:Class="GGJ21_UI.Vignette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGJ21_UI"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Rectangle Opacity="{Binding Opacity}">
            <Rectangle.Fill>
                <RadialGradientBrush ColorInterpolationMode="SRgbLinearInterpolation" GradientOrigin="0.5, 0.5">
                    <GradientStop Color="#00000000"/>
                    <GradientStop Color="#19000000" Offset="0.8"/>
                    <GradientStop Color="#C0000000" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

    </Grid>
</UserControl>
