<UserControl x:Class="GGJ21_UI.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGJ21_UI"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint=".5,0" EndPoint=".5,1.0">
                    <GradientStop Color="#FFFBD502" Offset="1"/>
                    <GradientStop Color="#FF141D6D"/>
                    <GradientStop Color="#FFB26323" Offset="0.8"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Fill="#70000000"/>
        <Image Source="pack://application:,,,/GGJ21-UI;component/Assets/Resources/UI/Assets/Instructions.png" Stretch="Uniform" Margin="0,0,0,60" />
        <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Start game" FontSize="60" Margin="0,0,0,10" Command="{Binding LoadLevelCommand}"/>
    </Grid>
</UserControl>
